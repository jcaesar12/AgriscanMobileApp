<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/cardLoadingAnalyze"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginTop="16dp"
                                   app:cardCornerRadius="12dp"
                                   app:cardElevation="4dp"
                                   android:backgroundTint="#fcfcfc"
                                   android:visibility="gone">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

        <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true"
                android:indeterminateTint="#4f764d"
                android:background="#dbeee0"
                android:padding="8dp"
                style="?android:attr/progressBarStyleLarge" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyze Plant"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our AI is examining your plant for diseases"
                android:textSize="14sp"
                android:textColor="#666" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
