<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Gradient Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_dashboardbg">

                <TextView
                    android:id="@+id/textHeading"
                    android:text="Profile"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textSubheading"
                    android:text="Manage your account and data"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tab Navigation -->
        <LinearLayout
            android:id="@+id/tabNavigation"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center">

            <!-- Tab items here -->
            <TextView
                android:id="@+id/tabProfile"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Profile"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:background="@drawable/tab_active_bg"
                android:textColor="#2b722c"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tabFinances"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Finances"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:textColor="#888888"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/tab_inactive_bg"/>

            <TextView
                android:id="@+id/tabYields"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Yields"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:textColor="#888888"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/tab_inactive_bg"/>
        </LinearLayout>

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/profileContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>
