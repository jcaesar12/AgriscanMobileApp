<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:padding="16dp">

    <!-- Gradient Top Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_dashboardbg">

            <TextView
                android:id="@+id/textHeading"
                android:text="Mwanedu AI Assistant"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textSubheading"
                android:text="Your AI-powered farming guide"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tab Navigation -->
    <LinearLayout
        android:id="@+id/tabNavigation"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tabCurrentChat"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Current Chat"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:background="@drawable/tab_active_bg"
            android:textColor="#2b722c"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tabChatHistory"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chat History"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textColor="#888888"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!-- Container for dynamic cards -->
    <FrameLayout
        android:id="@+id/chatContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"/>
</LinearLayout>
