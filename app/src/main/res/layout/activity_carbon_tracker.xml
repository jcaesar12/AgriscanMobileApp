<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E9E9E9"
        android:padding="16dp">

        <!-- Top Gradient Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_dashboardbg">

                <TextView
                    android:id="@+id/textHeading"
                    android:text="Activities and Impact"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textSubheading"
                    android:text="Monitor your agricultural activities and their environmental impact"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Carbon Status"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="8dp" />

        <!-- Metrics Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Carbon Saved Card -->
            <include
                android:id="@+id/cardCarbonSaved"
                layout="@layout/item_carbon_metric" />

            <!-- Reduction Rate Card -->
            <include
                android:id="@+id/cardReductionRate"
                layout="@layout/item_reduction_rate" />

            <!-- Eco Score Card -->
            <include
                android:id="@+id/cardEcoScore"
                layout="@layout/item_eco_score" />
        </LinearLayout>

        <!-- Activities Section Container -->
        <FrameLayout
            android:id="@+id/activitiesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
