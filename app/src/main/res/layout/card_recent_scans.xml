<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRecentScans"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="#fcfcfc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âŸ³ Recent Scans"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000" />

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/layoutNoScans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/camera_icon"
                app:tint="#888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No scans yet"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take your first photo to get started"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:textColor="#666" />
        </LinearLayout>

        <!-- Container for dynamically added scans -->
        <LinearLayout
            android:id="@+id/recentScansContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
